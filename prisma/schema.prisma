generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// 공통 필드 (각 모델에 복사해서 사용)
// id         BigInt   @id @default(autoincrement())
// created_at DateTime @default(now())
// updated_at DateTime @updatedAt

model User {
  id           BigInt         @id @default(autoincrement())
  email        String         @unique
  password     String
  created_at   DateTime       @default(now())
  updated_at   DateTime       @updatedAt
  refreshToken RefreshToken?
  couponIssues CouponIssues[]

  @@map("users")
}

model Coupon {
  id              BigInt         @id @default(autoincrement())
  name            String
  total_quantity  Int
  issued_quantity Int            @default(0)
  status          String         @default("OPEN")
  starts_at       DateTime?
  ends_at         DateTime?
  created_at      DateTime       @default(now())
  updated_at      DateTime       @updatedAt
  issues          CouponIssues[]

  @@map("coupons")
}

model CouponIssues {
  id         BigInt   @id @default(autoincrement())
  issue_code String   @default(uuid()) @db.Uuid
  is_used    Boolean  @default(false)
  user_id    BigInt
  coupon_id  BigInt
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  coupon     Coupon   @relation(fields: [coupon_id], references: [id], onDelete: Cascade)

  @@unique([coupon_id, user_id])
  @@index([coupon_id])
  @@index([user_id])
  @@map("coupon_issues")
}

model RefreshToken {
  id         BigInt   @id @default(autoincrement())
  user_id    BigInt   @unique
  token      String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("refresh_token")
}
